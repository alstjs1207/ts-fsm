{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./build",
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "noImplicitAny": true,
    "declaration": true,
  },
  "include": [
    "src/**/*",
    "*.config.js",
    "src/**/index.js",
    "public/**/*.js",
    "scripts/*.js",
    "scripts/*.ts",
  ]
}
